spring.data.mongodb.authentication-database= # Authentication database name.
spring.data.mongodb.database=toped_db # Database name.
spring.data.mongodb.host=192.168.190.223 # Mongo server host.
spring.data.mongodb.password=secret # Login password of the mongo server.
spring.data.mongodb.uri=mongodb://192.168.190.223:27017/toped_db # Mongo database URI. When set, host and port are ignored.
spring.data.mongodb.username=admin # Login user of the mongo server.